<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Seats in Car</th>
      <th>License Plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.Make %></td>
        <td><%= car.Model %></td>
        <td><%= car.Year %></td>
        <td><%= car.Number_of_seats %></td>
        <td><%= car.License_plate %></td>
        <td><%= button_to 'Show', car %></td>
        <td><%= button_to 'Edit', edit_car_path(car) %></td>
        <td><%= button_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

